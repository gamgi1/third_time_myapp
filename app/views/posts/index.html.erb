<h1>Posts</h1>
<p> <%= link_to 'New post', new_post_path%></p>
<% @post.each do |post| %>
  <h2> <%= post.title %></h2>
  <h3> <%= post.author %></h3>
  <p> <%= post.body %></p>
  <%= link_to 'Show post', post_path(post)%>
  <%= link_to 'Edit post', edit_post_path(post)%>
  <%= link_to 'Delete post', post, method: :delete%>
<% end %>
